{
  "name": "VoltIQ",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "create-k3d": "k3d cluster create --config ./infra/k8s/k3d-cluster.yaml",
    "dev:k3d": "k3d cluster create --config ./infra/k8s/k3d-cluster.yaml && kubectl apply -k ./infra/k8s/overlays/dev",
    "build-frontend": "docker build -t jakekuo/frontend:latest -f ./apps/frontend/Dockerfile ."
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
